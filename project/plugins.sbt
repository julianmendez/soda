/** sbt-assembly
  * This plugin creates a fat JAR of a project with all of its dependencies.
  * [[https://github.com/sbt/sbt-assembly]]
  * [[https://dl.bintray.com/sbt/sbt-plugin-releases/com.eed3si9n/sbt-assembly/]]
  */
addSbtPlugin("com.eed3si9n" % "sbt-assembly" % "0.15.0")


/** scalastyle-sbt-plugin
  * This plugin provides support for Scalastyle [[http://www.scalastyle.org]].
  * [[https://github.com/scalastyle/scalastyle-sbt-plugin]]
  * [[https://repo1.maven.org/maven2/org/scalastyle/]]
  */
addSbtPlugin("org.scalastyle" %% "scalastyle-sbt-plugin" % "1.0.0")


/** sbt-dotty
  * This plugin provides support to compile with Dotty [[https://dotty.epfl.ch]].
  * [[https://github.com/lampepfl/dotty]]
  * [[https://repo1.maven.org/maven2/ch/epfl/lamp/]]
  */
addSbtPlugin("ch.epfl.lamp" % "sbt-dotty" % "0.5.4")


/** sbt-scoverage
  * This is an sbt plugin for code coverage analysis via JaCoCo [[https://www.eclemma.org/jacoco/]].
  * [[https://github.com/sbt/sbt-jacoco]]
  * [[https://dl.bintray.com/sbt/sbt-plugin-releases/com.github.sbt/sbt-jacoco/]]
  */
addSbtPlugin("com.github.sbt" % "sbt-jacoco" % "3.3.0")

