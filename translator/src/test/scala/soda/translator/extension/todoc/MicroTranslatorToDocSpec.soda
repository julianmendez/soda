
class MicroTranslatorToDocSpec ()
  extends
    org.scalatest.funsuite.AnyFunSuite

  import
    soda.translator.block.DefaultBlockSequenceTranslator
    soda.translator.parser.BlockProcessor

  check [A : Type] (obtained : A) (expected : A) : org.scalatest.compatible.Assertion =
    assert (obtained == expected)

  instance =
    BlockProcessor .mk (
      DefaultBlockSequenceTranslator .mk (
        MicroTranslatorToDoc .mk
      )
    )

  original_snippet = "" +
    "/*" +
    "\n * This is an example" +
    "\n*/" +
    "\n"

  translated_snippet = "" +
    "\n\\end{lstlisting}" +
    "\n" +
    "\nThis is an example" +
    "\n" +
    "\n" +
    "\n\\begin{lstlisting}" +
    "\n" +
    "\n"

  test ("Document generation of a snippet") (
    check (
      obtained := instance .translate (original_snippet)
    ) (
      expected := translated_snippet
    )
  )

end

