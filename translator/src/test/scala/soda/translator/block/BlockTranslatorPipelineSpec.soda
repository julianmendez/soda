package soda.translator.block

* BlockTranslator00 ()
  extends BlockTranslator = {

  + soda.translator.parser.BlockBuilder_

  translate (block: Block): Block =
    BlockBuilder_ ().build (
      if block.lines.isEmpty
      then Seq ("")
      else block.lines.++ ( Seq ("tr00") )
    )

}

