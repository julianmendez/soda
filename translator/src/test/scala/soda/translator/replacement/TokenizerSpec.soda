package soda.translator.replacement


* TokenizerSpec() extends org.scalatest.funsuite.AnyFunSuite = {

  test("should tokenize a small example") {
    input = "    val Constant = \"my text\""
    expected = Seq(
      Token("    val Constant = ", ParserStateEnumImpl().Plain, 0),
      Token("\"my text\"", ParserStateEnumImpl().QuotesState, 19),
      Token("", ParserStateEnumImpl().Plain, 28)
    )
    obtained = TokenizerImpl(input).get_tokens

    assert(obtained == expected)
  }

  test("should tokenize a common tab in a string") {
    input = "  x = \"abc\tde\""
    expected = Seq(
      Token("  x = ", ParserStateEnumImpl().Plain, 0),
      Token("\"abc\tde\"", ParserStateEnumImpl().QuotesState, 6),
      Token("", ParserStateEnumImpl().Plain, 14)
    )
    obtained = TokenizerImpl(input).get_tokens

    assert(obtained == expected)
  }

  test("should tokenize an escaped tab in a string") {
    input = "  x = \"abc\\tde\""
    expected = Seq(
      Token("  x = ", ParserStateEnumImpl().Plain, 0),
      Token("\"abc\\tde\"", ParserStateEnumImpl().QuotesState, 6),
      Token("", ParserStateEnumImpl().Plain, 15)
    )
    obtained = TokenizerImpl(input).get_tokens

    assert(obtained == expected)
  }

  test("should tokenize a single function definition") {
    input = "def f(x: Int): Int = x"
    expected = Seq(
      Token("def f(x: Int): Int = x", ParserStateEnumImpl().Plain, 0)
    )
    obtained = TokenizerImpl(input).get_tokens

    assert(obtained == expected)
  }

  test("should tokenize a function call") {
    input = "\tas_digits (5 * number)"
    expected = Seq(
      Token("\tas_digits (5 * number)", ParserStateEnumImpl().Plain, 0)
    )
    obtained = TokenizerImpl(input).get_tokens

    assert(obtained == expected)
  }

}

