package se.umu.cs.rai.scopus.translator.example

+ scala.annotation.tailrec


* Factorial_example {

  - factorial (n: Int): Int

}


* Factorial_in_Scopus () extends Factorial_example {

  factorial (n: Int) = factorial_rec (n, 1)

  @tailrec
  factorial_rec (n: Int, product: Int): Int =
    if n <= 0
    then product
    else factorial_rec (n - 1, n * product)

}
