package scopus.translator.example


* AbstractFactorialConcise {
  has factorial (n: Int): Int
}

* FactorialConcise () extends AbstractFactorialConcise {

  factorial (n: Int) = {
    result = rec (n, 1)

    @tailrec
    rec (n: Int, product: Int): Int =
      if n == 0
      then product
      else rec (n - 1, n * product)

    result
  }
}

