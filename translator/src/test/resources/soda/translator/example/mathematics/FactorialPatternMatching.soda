package soda.example.mathematics

class FactorialPatternMatching

  apply (n : Int) : Int =
    _tailrec_get_factorial (n) (1)

  @tailrec
  _tailrec_get_factorial (n : Int) (product : Int) : Int =
    match n
      case 0 ==> product
      case x ==> _tailrec_get_factorial (x - 1) (x * product)

end

