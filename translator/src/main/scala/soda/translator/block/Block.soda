
class AnnotatedLine

  abstract
    line : String
    is_comment : Boolean

end

class Block
  extends
    PlainBlock

  abstract
    annotated_lines : Seq [AnnotatedLine]

  lines : Seq [String] =
    annotated_lines
      .map (lambda x --> x.line)

  readable_lines : Seq [AnnotatedLine] =
    annotated_lines
      .filter (lambda line --> not line.is_comment)

end

