package soda.example


* FlighMonitorSpec()
  extends org.scalatest.funsuite.AnyFunSuite = {
  import soda.lib.OptionSD
  import soda.lib.SomeSD_

  as_string(maybe_airport: OptionSD[Airport]): String =
    match maybe_airport {
      | SomeSD_(airport) -> airport.name
      | otherwise -> ""
    }

  test("Building valid airport identifiers") {
    builder = AirportBuilder()
    obtained = Seq(
      builder.build("UME"),
      builder.build("ARN"),
      builder.build("ESSA"),
      builder.build("ESNU"),
      builder.build("ume"),
      builder.build("arn"),
      builder.build("FRA")
    ).map(x -> as_string (x) )
    expected = Seq( "UME", "ARN", "", "", "", "", "FRA")

    assert(obtained == expected)
  }
}

