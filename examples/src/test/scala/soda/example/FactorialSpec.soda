package soda.translator.example


* FactorialSpec() extends org.scalatest.funsuite.AnyFunSuite = {

  factorial_values = Seq(
    (0, 1), (1, 1), (2, 2), (3, 6), (4, 24), (5, 120), (6, 720), (7, 5040), (8, 40320), (9, 362880), (10, 3628800)
  )

  test("should test the factorial - concise version") {
    expected = factorial_values
    obtained = factorial_values
      .map(pair -> pair._1)
      .map(n -> (n, FactorialConcise_().get_factorial(n)))

    assert(obtained == expected)
  }

  test("should test the factorial - verbose version") {
    expected = factorial_values
    obtained = factorial_values
      .map(pair -> pair._1)
      .map(n -> (n, FactorialVerbose_().get_factorial(n)))
    assert(obtained == expected)
  }
}

