
class TriangularNumberForLean

  import
    soda.example.forlean.lib.O_
    soda.example.forlean.lib.S_
    soda.example.forlean.lib.Nat

  @tailrec
  _tailrec_get_number (m : Nat) (acc : Nat) : Nat =
    match m
      case S_ (k) ==> _tailrec_get_number (k) (acc .add ( S_ (k) ) )
      case otherwise ==> acc

  get_number (n : Nat) : Nat =
    _tailrec_get_number (n) ( O_ () )

end

