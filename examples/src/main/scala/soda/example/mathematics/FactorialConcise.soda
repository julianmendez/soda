package soda.example.mathematics

* AbstractFactorialConcise = {

  has get_factorial (n: Int): Int

}

* FactorialConcise
  extends AbstractFactorialConcise = {

  @tailrec
  _rec_get_factorial (n: Int, product: Int): Int =
    if n == 0
    then product
    else _rec_get_factorial (n - 1, n * product)

  get_factorial (n: Int): Int =
    _rec_get_factorial (n, 1)

}

* FactorialConcise_()
  extends FactorialConcise

