package soda.example.forcoq.mathematics

class TriangularNumberForCoq

  import
    soda.example.forcoq.lib.nat
    soda.example.forcoq.lib.O
    soda.example.forcoq.lib.S

  @tailrec
  _tailrec_get_number (m: nat) (acc: nat): nat =
    match m
      | O() => acc
      | S (k) => _tailrec_get_number (k) (acc .add ( S (k) ))
    end

  get_number (n: nat): nat =
    _tailrec_get_number (n) ( O() )

end

class TriangularNumberForCoq_ ()
  extends
    TriangularNumberForCoq

end
